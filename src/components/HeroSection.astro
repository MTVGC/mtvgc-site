---
interface Metric {
  value: string;
  label: string;
}

interface Props {
  preLogo?: string;
  preTitle?: string;
  title: string;
  tagline?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  ctaSecondaryText?: string;
  ctaSecondaryHref?: string;
  metrics?: Metric[];
}

const {
  preLogo,
  preTitle,
  title,
  tagline,
  subtitle,
  ctaText,
  ctaHref,
  ctaSecondaryText,
  ctaSecondaryHref,
  metrics = [],
} = Astro.props;
---

<section class="hero">
  <div class="container hero-inner">
    <!-- Row 1: H1 full width -->
    <div class="hero-heading hero-anim" style="--delay: 0">
      {preLogo && <img src={preLogo} alt="MTV Global Consulting" class="hero-logo" />}
      {preTitle && <p class="hero-pre">{preTitle}</p>}
      <h1 set:html={title} />
    </div>

    <!-- Row 2 left: tagline + subtitle -->
    <div class="hero-text">
      {tagline && <p class="hero-tagline hero-anim" style="--delay: 1">{tagline}</p>}
      {subtitle && <p class="hero-sub hero-anim" set:html={subtitle} style="--delay: 2" />}
    </div>

    <!-- Row 2 right: metrics -->
    {metrics.length > 0 && (
      <div class="hero-metrics hero-anim" style="--delay: 3">
        {metrics.map(m => (
          <div class="metric">
            <span class="metric-value">{m.value}</span>
            <span class="metric-label">{m.label}</span>
          </div>
        ))}
      </div>
    )}

    <!-- Row 3: CTAs full width -->
    {(ctaText || ctaSecondaryText) && (
      <div class="hero-actions hero-anim" style="--delay: 4">
        {ctaText && ctaHref && (
          <a href={ctaHref} class="btn btn-primary">{ctaText}</a>
        )}
        {ctaSecondaryText && ctaSecondaryHref && (
          <a href={ctaSecondaryHref} class="btn btn-outline">{ctaSecondaryText}</a>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    padding: 7rem 0 3.5rem;
  }

  /* Grid: 2 columns, 3 rows */
  .hero-inner {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: 2.5rem 3rem;
  }

  /* Row 1: H1 spans full width */
  .hero-heading {
    grid-column: 1 / -1;
  }

  .hero-logo {
    width: 100%;
    max-width: 420px;
    height: auto;
    margin-bottom: 2rem;
  }

  .hero-pre {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .hero h1 {
    margin-bottom: 0;
    font-size: clamp(2.4rem, 5.5vw, 3.8rem);
  }

  /* Row 2 left: tagline + subtitle */
  .hero-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-tagline {
    font-size: 1.5rem;
    font-style: italic;
    font-weight: 500;
    color: var(--color-text-bright);
    margin-bottom: 1.25rem;
    letter-spacing: 0.01em;
  }

  .hero-sub {
    color: var(--color-text);
    font-size: 1.2rem;
    line-height: 1.8;
  }

  .hero-sub :global(.hero-situations) {
    color: var(--color-primary);
    font-weight: 500;
  }

  .hero-sub :global(.hero-promise) {
    font-size: 1.05rem;
    color: var(--color-text-muted);
  }

  /* Row 2 right: metrics 2x2 */
  .hero-metrics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    padding: 1.75rem 2rem;
    background: linear-gradient(135deg, rgba(0, 153, 255, 0.05), rgba(0, 153, 255, 0.02));
    border: 1px solid rgba(0, 153, 255, 0.12);
    border-radius: var(--radius);
    align-self: start;
  }

  /* Row 3: CTAs full width */
  .hero-actions {
    grid-column: 1 / -1;
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.25rem;
  }

  .metric-value {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(0, 153, 255, 0.3);
  }

  .metric-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    line-height: 1.3;
  }

  /* Staggered fade-in animation */
  .hero-anim {
    opacity: 0;
    transform: translateY(16px);
    animation: heroFadeIn 0.6s ease-out forwards;
    animation-delay: calc(var(--delay) * 0.15s);
  }

  @keyframes heroFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile: single column centered */
  @media (max-width: 768px) {
    .hero {
      padding: 6.5rem 0 2.5rem;
    }

    .hero-inner {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-heading {
      grid-column: 1;
    }

    .hero-text {
      align-items: center;
    }

    .hero-sub {
      text-align: center;
    }

    .hero-metrics {
      gap: 1rem;
      padding: 1.25rem 1.5rem;
    }

    .hero-actions {
      grid-column: 1;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
