---
interface Metric {
  value: string;
  label: string;
}

interface Props {
  preLogo?: string;
  preTitle?: string;
  title: string;
  tagline?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  ctaSecondaryText?: string;
  ctaSecondaryHref?: string;
  metrics?: Metric[];
}

const {
  preLogo,
  preTitle,
  title,
  tagline,
  subtitle,
  ctaText,
  ctaHref,
  ctaSecondaryText,
  ctaSecondaryHref,
  metrics = [],
} = Astro.props;
---

<section class="hero">
  <div class="container hero-inner">
    <div class="hero-anim" style="--delay: 0">
      {preLogo && <img src={preLogo} alt="MTV Global Consulting" class="hero-logo" />}
      {preTitle && <p class="hero-pre">{preTitle}</p>}
      <h1 set:html={title} />
    </div>

    {tagline && <p class="hero-tagline hero-anim" style="--delay: 1">{tagline}</p>}

    {subtitle && <p class="hero-sub hero-anim" set:html={subtitle} style="--delay: 2" />}

    {metrics.length > 0 && (
      <div class="hero-metrics hero-anim" style="--delay: 3">
        {metrics.map(m => (
          <div class="metric">
            <span class="metric-value">{m.value}</span>
            <span class="metric-label">{m.label}</span>
          </div>
        ))}
      </div>
    )}

    {(ctaText || ctaSecondaryText) && (
      <div class="hero-actions hero-anim" style="--delay: 4">
        {ctaText && ctaHref && (
          <a href={ctaHref} class="btn btn-primary">{ctaText}</a>
        )}
        {ctaSecondaryText && ctaSecondaryHref && (
          <a href={ctaSecondaryHref} class="btn btn-outline">{ctaSecondaryText}</a>
        )}
      </div>
    )}

    <div class="scroll-indicator hero-anim" style="--delay: 5" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9" />
      </svg>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 7.5rem 0 4rem;
  }

  .hero-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-logo {
    width: 100%;
    max-width: 420px;
    height: auto;
    margin-bottom: 2rem;
  }

  .hero-pre {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .hero h1 {
    margin-bottom: 1.25rem;
    max-width: 960px;
  }

  .hero-tagline {
    font-size: 1.4rem;
    font-style: italic;
    font-weight: 500;
    color: var(--color-text-bright);
    margin-bottom: 1.25rem;
    letter-spacing: 0.01em;
  }

  .hero-sub {
    color: var(--color-text);
    font-size: 1.15rem;
    max-width: 860px;
    text-align: center;
    margin-bottom: 2rem;
    line-height: 2;
  }

  .hero-sub :global(.hero-situations) {
    color: var(--color-primary);
    font-weight: 500;
  }

  .hero-sub :global(.hero-promise) {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  /* Metrics bar */
  .hero-metrics {
    display: flex;
    gap: 2.5rem;
    flex-wrap: nowrap;
    justify-content: center;
    padding: 1.75rem 3rem;
    background: linear-gradient(135deg, rgba(0, 153, 255, 0.08), rgba(0, 153, 255, 0.03));
    border: 1px solid rgba(0, 153, 255, 0.2);
    border-radius: var(--radius);
    box-shadow: 0 0 40px rgba(0, 153, 255, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.04);
    margin-bottom: 2.5rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
    min-width: 100px;
  }

  .metric-value {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(0, 153, 255, 0.3);
  }

  .metric-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-align: center;
    line-height: 1.3;
  }

  /* Staggered fade-in animation */
  .hero-anim {
    opacity: 0;
    transform: translateY(16px);
    animation: heroFadeIn 0.6s ease-out forwards;
    animation-delay: calc(var(--delay) * 0.15s);
  }

  @keyframes heroFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .scroll-indicator {
    margin-top: 2.5rem;
    color: var(--color-text-muted);
    opacity: 0;
  }

  .scroll-indicator.hero-anim {
    animation: heroFadeIn 0.6s ease-out forwards, scrollBounce 2s ease-in-out 1s infinite;
    animation-delay: calc(var(--delay) * 0.15s);
  }

  @keyframes scrollBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(6px); }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 6.5rem 0 2.5rem;
    }

    .hero-metrics {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
      padding: 1.25rem 1.5rem;
    }

    .metric {
      min-width: auto;
    }

    .metric-value {
      font-size: 1.35rem;
    }
  }
</style>
