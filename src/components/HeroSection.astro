---
interface Metric {
  value: string;
  label: string;
}

interface Props {
  preLogo?: string;
  preTitle?: string;
  title: string;
  tagline?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  ctaSecondaryText?: string;
  ctaSecondaryHref?: string;
  metrics?: Metric[];
}

const {
  preLogo,
  preTitle,
  title,
  tagline,
  subtitle,
  ctaText,
  ctaHref,
  ctaSecondaryText,
  ctaSecondaryHref,
  metrics = [],
} = Astro.props;
---

<section class="hero">
  <div class="container hero-inner">
    <!-- Left column: text -->
    <div class="hero-text">
      <div class="hero-anim" style="--delay: 0">
        {preLogo && <img src={preLogo} alt="MTV Global Consulting" class="hero-logo" />}
        {preTitle && <p class="hero-pre">{preTitle}</p>}
        <h1 set:html={title} />
      </div>

      {tagline && <p class="hero-tagline hero-anim" style="--delay: 1">{tagline}</p>}

      {subtitle && <p class="hero-sub hero-anim" set:html={subtitle} style="--delay: 2" />}
    </div>

    <!-- Right column: metrics -->
    <div class="hero-side">
      {metrics.length > 0 && (
        <div class="hero-metrics hero-anim" style="--delay: 3">
          {metrics.map(m => (
            <div class="metric">
              <span class="metric-value">{m.value}</span>
              <span class="metric-label">{m.label}</span>
            </div>
          ))}
        </div>
      )}
    </div>

    <!-- CTAs below both columns -->
    {(ctaText || ctaSecondaryText) && (
      <div class="hero-actions hero-anim" style="--delay: 4">
        {ctaText && ctaHref && (
          <a href={ctaHref} class="btn btn-primary">{ctaText}</a>
        )}
        {ctaSecondaryText && ctaSecondaryHref && (
          <a href={ctaSecondaryHref} class="btn btn-outline">{ctaSecondaryText}</a>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    padding: 7rem 0 3.5rem;
  }

  /* Two-column layout */
  .hero-inner {
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: 3rem;
    align-items: end;
  }

  /* Left column */
  .hero-text {
    display: flex;
    flex-direction: column;
  }

  .hero-logo {
    width: 100%;
    max-width: 420px;
    height: auto;
    margin-bottom: 2rem;
  }

  .hero-pre {
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
  }

  .hero h1 {
    margin-bottom: 2rem;
    font-size: clamp(2.4rem, 5.5vw, 3.8rem);
  }

  .hero-tagline {
    font-size: 1.3rem;
    font-style: italic;
    font-weight: 500;
    color: var(--color-text-bright);
    margin-bottom: 1.25rem;
    letter-spacing: 0.01em;
  }

  .hero-sub {
    color: var(--color-text);
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .hero-sub :global(.hero-situations) {
    color: var(--color-primary);
    font-weight: 500;
  }

  .hero-sub :global(.hero-promise) {
    font-size: 0.95rem;
    color: var(--color-text-muted);
  }

  /* Right column */
  .hero-side {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  /* Metrics - 1 per row inside single box */
  .hero-metrics {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0;
    background: linear-gradient(135deg, rgba(0, 153, 255, 0.08), rgba(0, 153, 255, 0.03));
    border: 1px solid rgba(0, 153, 255, 0.2);
    border-radius: var(--radius);
    box-shadow: 0 0 40px rgba(0, 153, 255, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.04);
    width: 100%;
    overflow: hidden;
  }

  .hero-actions {
    grid-column: 1 / -1;
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.7rem 1.5rem;
  }

  .metric-value {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(0, 153, 255, 0.3);
  }

  .metric-label {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.3;
  }

  /* Staggered fade-in animation */
  .hero-anim {
    opacity: 0;
    transform: translateY(16px);
    animation: heroFadeIn 0.6s ease-out forwards;
    animation-delay: calc(var(--delay) * 0.15s);
  }

  @keyframes heroFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile: single column centered */
  @media (max-width: 768px) {
    .hero {
      padding: 6.5rem 0 2.5rem;
    }

    .hero-inner {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text {
      align-items: center;
    }

    .hero-sub {
      text-align: center;
    }

    .metric {
      padding: 0.75rem 1.25rem;
    }

    .hero-actions {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .metric-value {
      font-size: 1.35rem;
    }
  }
</style>
