---
interface MissionMetric {
  value: string;
  label: string;
}

interface Props {
  client: string;
  sector: string;
  role?: string;
  description?: string;
  highlights?: string[];
  metrics: MissionMetric[];
  tags?: string[];
}

const { client, sector, role, description, highlights, metrics, tags = [] } = Astro.props;
---

<div class="mission-card card">
  <div class="mission-header">
    <div class="mission-title-row">
      <h3 class="mission-client">{client}</h3>
      <span class="tag">{sector}</span>
    </div>
    {role && <p class="mission-role">{role}</p>}
  </div>

  {description && <p class="mission-desc">{description}</p>}

  {highlights && highlights.length > 0 && (
    <ul class="mission-highlights">
      {highlights.map(h => (
        <li>{h}</li>
      ))}
    </ul>
  )}

  <div class="mission-metrics">
    {metrics.map(m => (
      <div class="mission-metric">
        <span class="mission-metric-value">{m.value}</span>
        <span class="mission-metric-label">{m.label}</span>
      </div>
    ))}
  </div>

  {tags.length > 0 && (
    <div class="mission-tags">
      {tags.map(t => <span class="tag tag-sm">{t}</span>)}
    </div>
  )}
</div>

<style>
  .mission-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .mission-header {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .mission-title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.6rem;
    width: 100%;
  }

  .mission-client {
    font-size: 1.15rem;
  }

  .mission-role {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin: 0;
  }

  .mission-desc {
    color: var(--color-text);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  .mission-highlights {
    list-style: none;
    padding-left: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    margin: 0;
    padding-top: 0.5rem;
  }

  .mission-highlights li {
    padding-left: 1.1rem;
    position: relative;
    color: var(--color-text);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .mission-highlights li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55em;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  .mission-metrics {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem 1.5rem;
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .mission-metric {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .mission-metric-value {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-primary);
  }

  .mission-metric-label {
    font-size: 0.82rem;
    color: var(--color-text-muted);
    line-height: 1.3;
  }

  .mission-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag-sm {
    font-size: 0.72rem;
    padding: 0.15rem 0.5rem;
  }
</style>
