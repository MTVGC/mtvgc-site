---
interface MissionMetric {
  value: string;
  label: string;
}

interface Props {
  client: string;
  sector: string;
  role?: string;
  description?: string;
  metrics: MissionMetric[];
  tags?: string[];
}

const { client, sector, role, description, metrics, tags = [] } = Astro.props;
---

<div class="mission-card card">
  <div class="mission-header">
    <div>
      <h3 class="mission-client">{client}</h3>
      {role && <p class="mission-role">{role}</p>}
    </div>
    <span class="tag">{sector}</span>
  </div>

  {description && <p class="mission-desc">{description}</p>}

  <div class="mission-metrics">
    {metrics.map(m => (
      <div class="mission-metric">
        <span class="mission-metric-value">{m.value}</span>
        <span class="mission-metric-label">{m.label}</span>
      </div>
    ))}
  </div>

  {tags.length > 0 && (
    <div class="mission-tags">
      {tags.map(t => <span class="tag tag-sm">{t}</span>)}
    </div>
  )}
</div>

<style>
  .mission-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mission-header {
    display: flex;
    align-items: start;
    justify-content: space-between;
    gap: 1rem;
  }

  .mission-client {
    font-size: 1.15rem;
    margin-bottom: 0.15rem;
  }

  .mission-role {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    margin: 0;
  }

  .mission-desc {
    color: var(--color-text-muted);
    font-size: 0.92rem;
    line-height: 1.6;
    margin: 0;
  }

  .mission-metrics {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .mission-metric {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .mission-metric-value {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-primary);
  }

  .mission-metric-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    line-height: 1.3;
  }

  .mission-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag-sm {
    font-size: 0.72rem;
    padding: 0.15rem 0.5rem;
  }
</style>
