---
interface Props {
  client: string;
  sector: string;
  date: string;
  title: string;
  context: string;
  results: string[];
}

const { client, sector, date, title, context, results } = Astro.props;
---

<div class="mission-full card">
  <div class="mf-header">
    <div class="mf-info">
      <span class="mf-client">{client}</span>
      <h3 class="mf-title">{title}</h3>
    </div>
    <div class="mf-tags">
      <span class="mf-tag">{sector}</span>
      <span class="mf-tag mf-tag-date">{date}</span>
    </div>
  </div>

  <p class="mf-context">{context}</p>

  <div class="mf-results">
    {results.map(r => (
      <div class="mf-result">{r}</div>
    ))}
  </div>
</div>

<style>
  .mission-full {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    border-left: 3px solid var(--color-primary);
  }

  .mf-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .mf-info {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .mf-client {
    font-family: var(--font-heading);
    font-size: 0.82rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .mf-title {
    font-size: 1.3rem;
    color: var(--color-text-bright);
  }

  .mf-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    flex-shrink: 0;
  }

  .mf-tag {
    display: inline-block;
    padding: 0.25rem 0.8rem;
    background: var(--color-accent-glow);
    color: var(--color-primary);
    border-radius: 20px;
    font-size: 0.78rem;
    font-family: var(--font-heading);
    white-space: nowrap;
  }

  .mf-tag-date {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-muted);
  }

  .mf-context {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .mf-results {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--color-border);
  }

  .mf-result {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    color: var(--color-text);
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, rgba(0, 153, 255, 0.08), rgba(0, 153, 255, 0.03));
    border-radius: var(--radius-sm);
  }
</style>
