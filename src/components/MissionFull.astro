---
interface Props {
  client: string;
  sector: string;
  date: string;
  title: string;
  context: string;
  results: string[];
}

const { client, sector, date, title, context, results } = Astro.props;
---

<div class="mission-full card">
  <div class="mf-header">
    <div class="mf-info">
      <span class="mf-client">{client}</span>
      <h3 class="mf-title">{title}</h3>
    </div>
    <div class="mf-tags">
      <span class="mf-tag">{sector}</span>
      <span class="mf-tag mf-tag-date">{date}</span>
    </div>
  </div>

  <p class="mf-context">{context}</p>

  <ul class="mf-results">
    {results.map(r => (
      <li class="mf-result">{r}</li>
    ))}
  </ul>
</div>

<style>
  .mission-full {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    position: relative;
    overflow: hidden;
  }

  .mission-full::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary), transparent);
  }

  .mf-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .mf-info {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .mf-client {
    font-family: var(--font-heading);
    font-size: 0.82rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .mf-title {
    font-size: 1.3rem;
    color: var(--color-text-bright);
  }

  .mf-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    flex-shrink: 0;
  }

  .mf-tag {
    display: inline-block;
    padding: 0.25rem 0.8rem;
    background: var(--color-accent-glow);
    color: var(--color-primary);
    border-radius: 20px;
    font-size: 0.78rem;
    font-family: var(--font-heading);
    white-space: nowrap;
  }

  .mf-tag-date {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-muted);
  }

  .mf-context {
    color: var(--color-text);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .mf-results {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem 2rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--color-border);
  }

  .mf-result {
    padding-left: 1.1rem;
    position: relative;
    font-size: 0.92rem;
    color: var(--color-text);
    line-height: 1.5;
  }

  .mf-result::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  @media (max-width: 768px) {
    .mf-results {
      grid-template-columns: 1fr;
    }

    .mf-header {
      flex-direction: column;
    }
  }
</style>
