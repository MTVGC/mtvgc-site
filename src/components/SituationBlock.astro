---
interface Proof {
  client: string;
  detail: string;
}

interface Props {
  title: string;
  accroche: string;
  actions: string[];
  preuves: Proof[];
}

const { title, accroche, actions, preuves } = Astro.props;
---

<div class="situation-block">
  <h3 class="block-title">{title}</h3>
  <p class="block-accroche">{accroche}</p>

  <div class="block-section">
    <h4>Ce que je fais</h4>
    <ul class="block-actions">
      {actions.map(a => (
        <li class="action-item">{a}</li>
      ))}
    </ul>
  </div>

  <div class="block-section">
    <h4>Preuves</h4>
    <ul class="block-preuves">
      {preuves.map(p => (
        <li class="preuve-item">
          <span class="preuve-client">{p.client}</span>
          <span class="preuve-detail">{p.detail}</span>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .situation-block {
    padding: 0;
  }

  .block-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-bright);
  }

  .block-accroche {
    color: var(--color-text);
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .block-section {
    margin-bottom: 2.5rem;
  }

  .block-section:last-child {
    margin-bottom: 0;
  }

  .block-section h4 {
    font-family: var(--font-heading);
    font-size: 0.88rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1.25rem;
  }

  .block-actions {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    padding-left: 0;
  }

  .action-item {
    padding-left: 1.25rem;
    position: relative;
    color: var(--color-text);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .action-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  .block-preuves {
    list-style: none;
    padding-left: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .preuve-item {
    padding-left: 1.25rem;
    position: relative;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .preuve-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  .preuve-client {
    font-family: var(--font-heading);
    color: var(--color-primary);
    margin-right: 0.4rem;
  }

  .preuve-client::after {
    content: ' \2014  ';
  }

  .preuve-detail {
    color: var(--color-text);
  }
</style>
